/* Comments Mini*/
.ssw-comments{
font-size: 12px;
}
.ssw-comments .ssw-comment{
background: #f8f8f8;
margin-top: 2px;
padding: 3px 6px;
word-wrap: break-word;
border: none;
}
.ssw-comments .ssw-comment:first-child{
padding-top:6px;
}
.ssw-comments .ssw-comment:last-child{
padding-bottom:6px;
}
.ssw-comments .ssw-comment > a.ssw-thumb{
display: block;
float: left;
margin-right: 4px;
}
.ssw-comments .ssw-comment-action{
margin-top: 8px;
}
.ssw-comments .ssw-comment-action button{
float: right;
}
.ssw-comments .ssw-view-all{
padding-left: 8px;
}

.ssw-commentmini-text {
height: 65px;
margin-bottom: 10px;
padding:4px;
cursor: text;
resize: none;
}

.ssw-comments .ssw-comment > .ssw-timestamp{
display: block;
}

.ssw-comment-text {
min-height: 50px;
padding: 4px;
height: auto;
margin-bottom: 0;
}

.ssw-comment-action .ssw-add-comment {
visibility: hidden;
float: right;
cursor: pointer;
margin-top: 10px;
}

.ssw-comments #ssw-no-comment{
border-bottom: none;
}

.ssw-comments #ssw-no-comment > p{
margin: 10px;
}

.ssw-comments > .ssw-comment:hover .ssw-comment-delete-btn { display: block !important; }

.ssw-feed-item .ssw-comment > .ssw-thumb > img,
.ssw-user-feed-item .ssw-comment > .ssw-thumb > img{
width: 32px;
height: 32px;
}
.ssw-comments > .ssw-comment .ssw-comment-delete-btn { margin: 0; }

#ssw-community-box .ssw-commentmini-text { margin-bottom: 0; }
#ssw-community-box .ssw-add-comment-mini { margin-top: 10px; }
