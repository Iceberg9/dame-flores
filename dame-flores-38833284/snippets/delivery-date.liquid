<div id="box-calendar">
  {% comment %}
  <div id="datepicker"></div>
  {% endcomment %}
  <h5>Selecciona una fecha para tu entrega:</h5>
  <input id="datepicker" type="text" name="attributes[date]" value="{{ cart.attributes.date }}" required>
  <i id="icon-calendar" class="fa fa-calendar"></i>
</div>

<div id="box-hora">
	<p class="cart-attribute__field">
	  <h5>Horarios:</h5>
	  <input required class="required" type="radio" name="attributes[Hora de entrega]" value="7 - 10 hrs"{% if cart.attributes["Hora de entrega"] == "7 - 10 hrs" %} checked{% endif %}> <span>7 - 10 hrs</span><br>
	  <input required class="required" type="radio" name="attributes[Hora de entrega]" value="10-13 hrs"{% if cart.attributes["Hora de entrega"] == "10-13 hrs" %} checked{% endif %}> <span>10-13 hrs</span><br>
	  <input required class="required" type="radio" name="attributes[Hora de entrega]" value="13 - 16 hrs"{% if cart.attributes["Hora de entrega"] == "13 - 16 hrs" %} checked{% endif %}> <span>13 - 16 hrs</span><br>
	  <input required class="required" type="radio" name="attributes[Hora de entrega]" value="16 - 21 hrs"{% if cart.attributes["Hora de entrega"] == "16 - 21 hrs" %} checked{% endif %}> <span>16 - 21 hrs</span><br>
	</p>
</div>
<div class="clear"></div>

<script>
(function($){
  $(function() {
    $("#datepicker").datepicker({ 
      minDate: 0,
      //required: true,
      maxDate: "+2W"
    });
  });
})(jQuery);
</script>