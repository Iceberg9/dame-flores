}
.ssw-user-feed-item > .ssw-item-video {
overflow: hidden;
position: relative;
}
.ssw-user-feed-item > .ssw-item-image {
position: relative;
}
.ssw-user-feed-item > .ssw-item-video > .ssw-video-play-icon {
background: url("//img5.socialshopwave.com/img/share-icons-sprite.png") no-repeat scroll -613px -35px rgba(0, 0, 0, 0);
height: 32px;
left: 50%;
margin-left: -16px;
margin-top: -16px;
position: absolute;
top: 50%;
width: 32px;
}
.ssw-user-feed-item > .ssw-item-image > a > img, .ssw-user-feed-item > .ssw-item-image > img, .ssw-user-feed-item > .ssw-item-video {
border-top-left-radius: 2px;
border-top-right-radius: 2px;
width: 100%;
}