<div id="product-nav-wrapper" class="custom-font">
<div class="search-middle">
	<form method="get" action="/search">
		<input type="text" name="q" placeholder="Â¿Buscas algo en especifico?" />
		<button  type="submit"><i class="fa fa-search"></i></button>
	</form>
</div>
<ul class="nav nav-pills">
  {% for link in linklists.sidebar-collection.links %}
  {% assign child_list_handle = link.title | handleize %}
  {% if linklists[child_list_handle].links != blank %}
  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      <span class="nav-label">{{ link.title | escape }}</span>
    </a>
    <ul class="dropdown-menu">
      {% for childlink in linklists[child_list_handle].links %}
      <li><a href="{{ childlink.url }}"><i class="fa fa-angle-double-right"></i>  {{ childlink.title | escape }}</a></li>
      {% endfor %}
    </ul>
  </li>
  {% else %}
  <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
  {% endif %}
  {% endfor %}
</ul>
</div>
