/* Invite */
.ssw-share-btns > div {
display: inline-block;
margin-bottom: 10px;
margin-right: 4px;
}

.ssw-share-btns > div > a{
display: inline-block;
color: #fff;
line-height: 40px;
outline: none;
width: 180px;
text-decoration: none;
text-align: center;
}

.ssw-share-btns > div > i{
color: #fff;
display: inline-block;
float: left;
font-size: 20px;
line-height: 40px;
text-align: center;
width: 41px;
}

.ssw-share-btns > div > i:before {
line-height: 40px;
}

.ssw-share-btns > .ssw-fbbtn > i{
background: #354f88;
}

.ssw-share-btns > .ssw-twbtn > i{
background: #40a2d1;
}

.ssw-share-btns > div.ssw-fbbtn > a{
background: #3b5998;
}

.ssw-share-btns > div.ssw-fbbtn > a:hover{
background: #354f88;
}

.ssw-share-btns > div.ssw-twbtn > a{
background: #45b0e3;
}

.ssw-share-btns > div.ssw-twbtn > a:hover{
background: #40a2d1;
}

i.ssw-icon-facebook-squared {
color: #3B579D;
}

.ssw-invite-page i.ssw-icon-facebook-square{
font-size: 24px;
}

.ssw-invite-page .ssw-share-btns > div > a {
color: #ffffff !important;
border: none;
padding: 0;
}

#ssw-edit-profile-form .ssw-input-large, .ssw-invite-page .ssw-input-large {
width: 210px;
}

.ssw-invite-fb {
display: block;
max-height: 300px;
overflow-y: auto;
margin: 0 0 20px;
padding: 0;
width: 101%;
}
.ssw-invite-fb img {
margin-right: 4px;
float: left;
}
.ssw-invite-fb > li{
display: block;
float: left;
padding: 10px 0 10px 10px;
width: 195px;
margin: 0 10px 10px 0;
border: 1px solid rgba(0,0,0,0);
position:relative;
}
.ssw-invite-fb > li:hover{
background-color: #cccccc;
border-radius: 2px;
}
.ssw-invite-fb > li > button{
display: block;
margin-top: 2px;
}
.ssw-invite-fb > li > a{
font-size: 12px;
line-height: 120%;
font-weight: bold;
}
.ssw-invite-link{
background: none repeat scroll 0 0 #ECEEF5;
border: 1px solid #CAD4E7;
-webkit-border-radius: 3px;
-moz-border-radius: 3px;
border-radius: 3px;
color: #3E6D8E;
display: inline-block;
font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;
font-size: 12px;
font-weight: normal;
margin: 2px 2px 2px 0;
padding: 3px 4px;
text-decoration: none;
}
.ssw-invite-fb > li > a.ssw-invite-link > i{
font-size: 13px;
line-height: 12px;
float: left;
margin-top: 1px;
margin-right: 3px;
}
.ssw-invite-fb > li > a.ssw-invite-link:hover{
border-color: #9DACCE;
text-decoration: none;
}

@media screen and (max-width: 480px){
.ssw-invite-page .ssw-span5,
.ssw-invite-page .ssw-span6{
display: block;
width: 100%;
margin-bottom: 30px;
margin-left: 0;
}
}